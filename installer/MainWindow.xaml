<Window x:Class="RAWebInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RAWeb Installer"
        SizeToContent="Height"
        Width="650"
        ResizeMode="NoResize"
        ThemeMode="System">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- App info -->
            <RowDefinition Height="Auto"/>
            <!-- Capabilities -->
            <RowDefinition Height="Auto"/>
            <!-- Checkbox -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="AppTitleText"
                   Text="Install RAWeb?"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,15"/>

        <!-- App Info: Left Section -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0">
            <TextBlock Text="Open Source App"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource AccentTextFillColorSecondaryBrush}"/>
            <TextBlock x:Name="PublisherText"
                       Text="Publisher: Microsoft Corporation"
                       Style="{StaticResource BodyTextBlockStyle}"/>
            <TextBlock x:Name="VersionText"
                       Text="Version: 1.1702.811.0"
                       Style="{StaticResource BodyTextBlockStyle}"/>
            <TextBlock x:Name="SourceText"
                       Text="Source: C:\Users\jackb\OneDrive\Backups &amp; Additional Files\surface_setup\apps\uwp\arm64\Apps\Feedback Hub\FeedbackHub.AppxBundle"
                       Style="{StaticResource BodyTextBlockStyle}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- App Info: Right Side App Icon -->
        <Border x:Name="IconBackplate"
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                Width="92"
                Height="92"
                Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                CornerRadius="0">
            <Image Width="64"
                   Height="64"
                   Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Border>

        <!-- Capabilities -->
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,15,0,0">
            <TextBlock Text="Capabilities:"
                       Style="{StaticResource BodyTextBlockStyle}"/>
            <TextBlock Text="• Access your Internet connection"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="• Access your home or work networks"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="• Use your local computer and enterprise domain credentials"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="• Read your files"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="• Enable optional Windows features"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="• Create and install certificates"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="• Manage websites and application pools (IIS)"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
        </StackPanel>

        <!-- Status Text -->
        <StackPanel  Grid.Row="3"
                     Grid.ColumnSpan="2"
                     Margin="0,16,0,0"
                     Height="24">
            <TextBlock x:Name="LogBox"
                       Text=""
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Height="20"
                       Style="{StaticResource BodyTextBlockStyle}">
            </TextBlock>
            <ProgressBar x:Name="ProgressBar"
                         Height="6"
                         IsIndeterminate="True"
                         Visibility="Collapsed">
            </ProgressBar>
        </StackPanel>

        <!-- Actions Row (Checkbox and Buttons) -->
        <DockPanel Grid.Row="5"
                   Grid.ColumnSpan="2"
                   Margin="0,16,0,0">
            <!-- Checkbox on Left -->
            <CheckBox x:Name="LaunchWhenReady"
                      Content="Launch when ready"
                      IsChecked="True"
                      VerticalAlignment="Center"
                      DockPanel.Dock="Left"
                      FontSize="14"/>

            <!-- Buttons on Right -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right">
                <Button x:Name="InstallButton"
                        Content="Install (express)"
                        Style="{DynamicResource AccentButtonStyle}"
                        Width="140"
                        Height="32"
                        FontSize="14">
                    <Button.Resources>
                        <CornerRadius x:Key="ControlCornerRadius">4,0,0,4
                        </CornerRadius>
                    </Button.Resources>
                </Button>
                <Button x:Name="InstallButtonDrop"
                        Content="&#xE70D;"
                        Style="{DynamicResource AccentButtonStyle}"
                        Width="32"
                        Height="32"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        FontSize="10"
                        Margin="0,0,10,0"
                        BorderThickness="0,1,1,1"
                        Padding="0">
                    <Button.Resources>
                        <CornerRadius x:Key="ControlCornerRadius">0,4,4,0
                        </CornerRadius>
                    </Button.Resources>
                </Button>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{DynamicResource AccentButtonStyle}"
                        Width="120"
                        Height="32"
                        FontSize="14"/>
                <Button x:Name="LaunchButton"
                        Content="Launch"
                        Style="{DynamicResource AccentButtonStyle}"
                        Width="140"
                        Height="32"
                        FontSize="14"
                        Visibility="Collapsed"/>
            </StackPanel>
        </DockPanel>
    </Grid>

</Window>
