<Window x:Class="RAWebInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RAWeb Installer"
        Height="432"
        Width="650"
        ResizeMode="NoResize">

    <Grid Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- App info -->
            <RowDefinition Height="Auto"/>
            <!-- Capabilities -->
            <RowDefinition Height="Auto"/>
            <!-- Checkbox -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="AppTitleText"
                   Text="Install RAWeb?"
                   FontSize="28"
                   FontWeight="700"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,15"/>

        <!-- App Info: Left Section -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0">
            <TextBlock x:Name="PublisherText"
                       Text="Publisher: Microsoft Corporation"/>
            <TextBlock x:Name="VersionText"
                       Text="Version: 1.1702.811.0"/>
            <TextBlock x:Name="SourceText"
                       Text="Source: C:\Users\jackb\OneDrive\Backups &amp; Additional Files\surface_setup\apps\uwp\arm64\Apps\Feedback Hub\FeedbackHub.AppxBundle"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- App Info: Right Side App Icon -->
        <Border x:Name="IconBackplate"
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                Width="92"
                Height="92"
                Background="#3f516d"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                CornerRadius="0">
            <Image Width="64"
                   Height="64"
                   Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Border>

        <!-- Capabilities -->
        <StackPanel Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,15,0,0">
            <TextBlock Text="Capabilities:"
                       FontWeight="Bold"/>
            <TextBlock Text="• Access your Internet connection"/>
            <TextBlock Text="• Access your home or work networks"/>
            <TextBlock Text="• Use your local computer and enterprise domain credentials"/>
            <TextBlock Text="• Read your files"/>
            <TextBlock Text="• Enable optional Windows features"/>
            <TextBlock Text="• Create and install certificates"/>
            <TextBlock Text="• Manage websites and application pools (IIS)"/>
        </StackPanel>

        <!-- Status Text -->
        <StackPanel  Grid.Row="3"
                     Grid.ColumnSpan="2"
                     Margin="0,16,0,0"
                     Height="24">
            <TextBlock x:Name="LogBox"
                       Text=""
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Height="20">
            </TextBlock>
            <ProgressBar x:Name="ProgressBar"
                         Height="4"
                         IsIndeterminate="True"
                         Visibility="Collapsed"
                         BorderThickness="0">
            </ProgressBar>
        </StackPanel>

        <!-- Actions Row (Checkbox and Buttons) -->
        <DockPanel Grid.Row="5"
                   Grid.ColumnSpan="2"
                   Margin="0,16,0,0">
            <!-- Checkbox on Left -->
            <CheckBox x:Name="LaunchWhenReady"
                      Content="Launch when ready"
                      IsChecked="True"
                      VerticalAlignment="Center"
                      DockPanel.Dock="Left"/>

            <!-- Buttons on Right -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right">
                <Button x:Name="InstallButton"
                        Content="Install (express)"
                        Width="100"
                        Height="32"/>
                <Button x:Name="InstallButtonDrop"
                        Content="&#xE70D;"
                        Width="20"
                        Height="32"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="10"
                        BorderThickness="0,1,1,1"
                        Margin="0,0,10,0"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="120"
                        Height="32"/>
                <Button x:Name="LaunchButton"
                        Content="Launch"
                        Width="120"
                        Height="32"
                        Visibility="Collapsed"/>
            </StackPanel>
        </DockPanel>
    </Grid>

</Window>
